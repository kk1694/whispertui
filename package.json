{
  "name": "whispertui",
  "version": "0.1.0",
  "description": "Terminal-based voice transcription tool for Linux/Wayland",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "whispertui": "src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "cp -r stubs/react-devtools-core node_modules/ && bun build --compile --minify src/index.ts --outfile dist/whispertui",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.8",
    "ink-testing-library": "^4.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "ink": "^6.6.0",
    "react": "^19.2.3",
    "zod": "^4.3.5"
  }
}
